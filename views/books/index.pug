extends ../layout

block content
        h1 Books
        p
            a(class="button" href='/books/new') Create New Book     
        include search
        br  
        table
            tr
                th Title
                th Author
                th Genre
                th Year
            each book in books
                tr
                    td 
                        a(href=`/books/${book.id}`)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year
        br
        div
            a(class="button pages" href="/books/page1") 1 
            a(class="button pages" href="/books/page2") 2